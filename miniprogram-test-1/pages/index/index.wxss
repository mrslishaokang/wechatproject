/**index.wxss**/
page{ 
 height: 100%; 
} 
  
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
} 
  
/*登录图片*/  
.login-icon{ 
 flex: auto; 
} 
.login-img{ 
  height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
  z-index:-100;
} 
  
/*表单内容*/
.login-from { 
 margin-top: 50px; /*置顶距离*/
 flex: auto; 
 height:100%; 
} 
  
.inputView { 
 background-color: #fff; 
 line-height: 44px; 
} 
/*输入框*/
.nameImage, .keyImage { 
 margin-left: 22px; 
 width: 14px; 
 height: 14px
} 
  
.loginLab { 
 margin: 15px 15px 15px 10px; 
 color: #545454; 
 font-size: 14px;
 z-index:3

} 
.inputText { 
 flex: block; 
 float: right; 
 text-align: right; 
 margin-right: 22px; /*靠右距离*/
 margin-top: 11px; 
 background-color:transparent;
 font-size: 14px  /*字体大小*/
} 
  
.line { 
 width: 100%; 
 height: 1px; 
 background-color: #cccccc; 
 margin-top: 1px; 
} 
/*按钮*/
.loginBtnView { 
 width: 100%; 
 height: auto; 
 background-color: #f2f2f2; 
 margin-top: 0px; /*置顶距离*/
 margin-bottom: 0px; /*置底距离*/
 padding-bottom: 0px; 
} 
  
.loginBtn { 
 width: 90%; 
  background-color: #009788;
 margin-top: 35px; 
}